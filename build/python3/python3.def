Bootstrap: library
From: ubuntu:16.04

%post
	apt-get update && apt-get -y upgrade
	apt-get install -y build-essential software-properties-common \
		curl git htop man unzip vim wget nano zlib1g-dev libffi-dev gcc \
		python3-setuptools

	VERSION=3.7.3

	wget https://www.python.org/ftp/python/$VERSION/Python-$VERSION.tgz
	gunzip Python-$VERSION.tgz && tar -xvf Python-$VERSION.tar
	cd Python-$VERSION
	./configure -prefix=/usr/local
	#/usr/local
	make
	make install
	#make altinstall
	#easy_install-3.7 pip
	ln -sfn /usr/local/bin/python3.7 /usr/bin/python3
	#pip3 install --upgrade pip	

	#wget https://raw.githubusercontent.com/hopehpc/singularity/master/build/scripts/scientific.sh
	#bash scientific.sh

