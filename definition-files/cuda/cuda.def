Bootstrap: docker
From: nvidia/cuda:8.0-devel-ubuntu16.04

%environment
	# so that nvcc is found
	export PATH=$PATH:/usr/local/cuda/bin 

%post
	apt-get update -y
	apt-get install -y build-essential software-properties-common \
                curl git unzip vim wget gcc

	export PATH=$PATH:/usr/local/cuda/bin
